{
  "env": {
    "es6": true,
    "mocha": true
  },
  "extends" : [
    "standard",
    "google"
  ],
  "rules": {
    "semi" : [2, "always"],
    "max-len": [2, 80, 2],
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "object-curly-spacing": ["error", "always", {
      "objectsInObjects": false,
      "arraysInObjects": false
    }],
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
